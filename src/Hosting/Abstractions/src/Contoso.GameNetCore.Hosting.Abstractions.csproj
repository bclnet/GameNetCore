<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>GAME.NET Core hosting and startup abstractions for game applications.</Description>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <IsGameNetCoreApp>true</IsGameNetCoreApp>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>gamenetcore;hosting</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Contoso.GameNetCore.Hosting.Server.Abstractions" />
    <Reference Include="Contoso.GameNetCore.Proto.Abstractions" />
    <Reference Include="Microsoft.Extensions.Hosting.Abstractions" />
  </ItemGroup>

</Project>
