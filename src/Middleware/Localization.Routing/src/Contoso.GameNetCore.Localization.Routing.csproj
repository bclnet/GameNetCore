<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Product>Microsoft ASP.NET Core</Product>
    <Description>Provides a request culture provider which gets culture and ui-culture from request's route data.</Description>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <IsGameNetCoreApp>true</IsGameNetCoreApp>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>aspnetcore;localization</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Contoso.GameNetCore.Localization" />
    <Reference Include="Contoso.GameNetCore.Routing.Abstractions" />
  </ItemGroup>

</Project>
