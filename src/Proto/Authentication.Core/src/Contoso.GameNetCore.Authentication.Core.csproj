<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>ASP.NET Core common types used by the various authentication middleware components.</Description>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <IsGameNetCoreApp>true</IsGameNetCoreApp>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>aspnetcore;authentication;security</PackageTags>
    <EnableApiCheck>false</EnableApiCheck>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Contoso.GameNetCore.Authentication.Abstractions" />
    <Reference Include="Contoso.GameNetCore.Proto" />
    <Reference Include="Contoso.GameNetCore.Proto.Extensions" />
  </ItemGroup>

</Project>
